get '/admin/posts' => sub {
    my $self = shift;
    
    $self->stash(posts => [{
        id => 123,
        title => 'foo bar',
    }]);
} => 'admin/post_list';

get '/admin/posts/edit/(id)' => sub {

} => '/admin/edit_post';

shagadelic;
